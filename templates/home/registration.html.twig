{% extends 'base.html.twig' %}

{% block additionnal_body_class %}ls-closed login-page openbook{% endblock %}

{% block titre_page %}BDD Stages - Inscription{% endblock %}

{% block content %}
        <div class="card">
            <img src="https://wiki.centrale-marseille.fr/ginfo/_detail/logobest.png?id=index" height="100px" width="auto">

            <div class="body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.firstName, {'label': 'Prénom', 'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    {{ form_row(form.lastName, {'label': 'Nom', 'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    {{ form_row(form.userName, {'label': 'Nom d\'utilisateur', 'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'class': 'form-control', 'placeholder': "Confirmer le mot de passe"}}) }}
                    {{ form_widget(form.roles) }}
                </div>
                <button type="submit" class="btn btn-success">Inscription</button>
                {{ form_end(form) }}
            </div>
        </div>

{% endblock %}
